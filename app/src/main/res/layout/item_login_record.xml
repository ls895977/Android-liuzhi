<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_loginrecord_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp"
        android:src="@mipmap/normal_state" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_loginrecord_point"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018年8月7日12:42"
            android:textColor="@color/mineTextCommonColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_login_record_loginadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="再[杭州市] 登录"
            android:textColor="@color/mineTextCommonColor"
            android:textSize="11sp" />


    </LinearLayout>
</RelativeLayout>