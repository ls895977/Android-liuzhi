<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40">

        <ImageView
            android:id="@+id/forget_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip_10"
            android:padding="@dimen/dip_5"
            android:src="@mipmap/common_black_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dip_30"
        android:text="忘记密码"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />


    <EditText
        android:layout_marginTop="@dimen/dip_50"
        android:id="@+id/et_forgetpassword_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入账号"
        android:paddingLeft="16dp"
        android:textSize="14sp" />

    <View
        style="@style/commonDiciderStyle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_forgetpassword_authcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingLeft="16dp"
            android:textSize="14sp" />

        <com.hykj.liuzhi.androidcomponents.view.CountdownButton
            android:id="@+id/password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_button_regist_oval"
            android:gravity="center"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_5"
            android:paddingRight="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_5"
            android:text="获取验证码" />
    </RelativeLayout>


    <View
        style="@style/commonDiciderStyle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

    <EditText
        android:id="@+id/et_forgetpassword_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="请输入密码(至少6位字符)"
        android:paddingLeft="16dp"
        android:textSize="14sp" />

    <View
        style="@style/commonDiciderStyle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />


    <TextView
        android:id="@+id/tv_forgetpassword_resetpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="#ffea00"
        android:gravity="center"
        android:text="重置密码"
        android:textColor="@color/colorPrimaryDark" />
</LinearLayout>