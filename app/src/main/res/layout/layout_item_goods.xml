<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="5dp"
    android:paddingLeft="@dimen/dip_5"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="140dp"
        android:scaleType="fitXY"
        android:layout_height="140dp"
        android:background="@mipmap/test1" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@id/iv_goods"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="这是标题这是标题这是标题这是标题这是标题"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_goods"
                android:text="限量100件"
                android:textColor="#aaaaaa"
                android:textSize="13sp" />
            <com.hykj.liuzhi.androidcomponents.ui.fragment.shop.view.MyLinearLayout
                android:id="@+id/tv_goods_lab"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dip_5"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="5dp"
                android:text="$99"
                android:textColor="#ffb400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_goods_goods_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:text="3456已拥有"
                android:textColor="#aaaaaa"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>