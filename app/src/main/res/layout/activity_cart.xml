<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/arrow_black_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购物车"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dip_20"
            android:text="管理"
            android:textColor="#000000"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dip_50"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"></View>
        <!--<RelativeLayout-->
        <!--android:id="@+id/rl_bottom_right"-->
        <!--android:layout_width="130dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="#ffea00">-->
        <!--</RelativeLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_allchose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/tv_check_box"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:text="全选" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/shop_delte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_delte"
                    android:layout_width="@dimen/dip_130"
                    android:layout_height="match_parent"
                    android:background="#ffea00"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#414141"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shop_jiesuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="合计: 0"
                    android:textColor="#ffb400"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/rl_bottom_right"
                    android:layout_width="@dimen/dip_130"
                    android:layout_height="match_parent"
                    android:background="#ffea00"
                    android:gravity="center"
                    android:text="结算(0)"
                    android:textColor="#414141"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>