<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="收货人" />

            <EditText
                android:id="@+id/address_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入收货人姓名"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="17dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="手机号码" />

            <EditText
                android:id="@+id/address_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入联系电话"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="17dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/addr_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="所在地区" />

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/next_grey"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:text="请选择"
                android:textColor="#aaaaaa"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="17dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="详细地址" />

            <EditText
                android:id="@+id/address_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入详细地址"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="设为默认地址"
            android:textColor="@color/mineTextCommonColor"
            android:textSize="15sp" />

        <com.suke.widget.SwitchButton
            android:id="@+id/add_switch"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/add_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_20"
        android:background="@drawable/bg_circle_detail_focus"
        android:gravity="center"
        android:padding="@dimen/dip_10"
        android:text="保存"
        android:textColor="@color/black"
        android:textSize="@dimen/fond_16sp" />
</LinearLayout>