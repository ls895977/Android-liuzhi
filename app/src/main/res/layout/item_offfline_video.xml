<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_marginTop="12dp"

    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_offline_video_pic"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/id_card_img_show" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offline_video_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="最美的回忆,都围绕着我们搜有者"
            android:textColor="#000" />


        <TextView
            android:id="@+id/tv_offline_video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="26.6m"
            android:textColor="@color/GeyTextColor"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>