<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/iv_attention_ima"
        android:scaleType="fitXY"
        android:src="@mipmap/btn_publish_photo"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />


    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_attention_name"
            android:textColor="@color/public_3f56ae"
            android:textSize="12sp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_attention_msg"
            android:layout_marginTop="11dp"
            android:textColor="@color/public_414141"
            android:textSize="12sp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/textView"
        android:textSize="11sp"
        android:background="@drawable/bg_button_el_2dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/public_aaaaaa"
        android:padding="5dp"
        android:text="已关注"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

</LinearLayout>