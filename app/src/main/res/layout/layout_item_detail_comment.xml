<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dip_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_icon"
            android:layout_marginLeft="15dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/iv_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginLeft="5dp"
            android:text="用户名"
            android:textSize="13sp"
            android:textColor="#3f56ae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/iv_time"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:text="09:36"
            android:textColor="#414141"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/iv_neirong"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:textSize="14sp"
            android:textColor="#414141"
            android:text="深感同受，所以更应该珍惜当下，珍惜身边的，好好的过好每一天深感同受，所以更应该珍惜当下，珍惜身边的人，好好的过好每一天所以更应该珍惜当下，珍惜身边的人，好好的过好每一天。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/iv_report"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/report"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    

</LinearLayout>