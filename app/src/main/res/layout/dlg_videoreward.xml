<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dip_10">

        <TextView
            android:id="@+id/information_paizhao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:background="@drawable/shapbuttom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dip_45"
                android:layout_height="@dimen/dip_45"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/reward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/dip_5"
                android:text="神奇种子"
                android:textColor="@color/color_4d"
                android:textSize="@dimen/fond_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/dip_5"
                android:text="点赞是美意，打赏是奖励"
                android:textColor="@color/color_4d"
                android:textSize="@dimen/fond_14sp" />

            <LinearLayout
                android:layout_width="@dimen/dip_80"
                android:layout_height="@dimen/dip_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dip_20"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/video_input"
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:maxLength="3"
                    android:maxLines="3"
                    android:text="9.9"
                    android:textColor="@color/color_4d"
                    android:textColorHint="@color/color_4d"
                    android:textSize="@dimen/fond_26sp" />

                <ImageView
                    android:id="@+id/video_ivImg"
                    android:layout_width="@dimen/dip_20"
                    android:layout_height="@dimen/dip_20"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/edit_address" />
            </LinearLayout>
            <TextView
                android:id="@+id/video_suiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_5"
                android:text="随机种子"
                android:textColor="@color/public_3f56ae"
                android:textSize="@dimen/fond_14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/video_dashang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_20"
                android:background="@drawable/bt_dlg_video"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="打赏"
                android:textColor="@color/black"
                android:textColorHint="@color/color_4d"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_20"
            android:background="@drawable/shap_top" />
    </LinearLayout>

    <ImageView
        android:id="@+id/share_shutdown"
        android:layout_width="@dimen/dip_30"
        android:layout_height="@dimen/dip_30"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_55"
        android:padding="@dimen/dip_5"
        android:src="@mipmap/btn_close_reward" />

</RelativeLayout>
