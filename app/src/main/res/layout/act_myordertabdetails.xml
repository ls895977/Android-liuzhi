<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/activity_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dip_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dip_10">

                    <TextView
                        android:id="@+id/oder_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="带收货"
                        android:textColor="@color/coloer_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="还剩6天5小时自动确认"
                        android:textColor="@color/color_69" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dip_10"
                        android:paddingRight="@dimen/dip_10">

                        <TextView
                            android:id="@+id/address_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人：金贵夫人" />

                        <TextView
                            android:id="@+id/address_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="1888888888" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/address_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dip_10"
                        android:paddingTop="@dimen/dip_10"
                        android:paddingBottom="@dimen/dip_10"
                        android:text="浙江省绍兴市镜湖新" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品总价：" />

                    <TextView
                        android:id="@+id/orders_goodsmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="¥396.00"
                        android:textColor="@color/coloer_yellow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分折扣：" />

                    <TextView
                        android:id="@+id/deductible_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0.00"
                        android:textColor="@color/coloer_yellow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单总价：" />

                    <TextView
                        android:id="@+id/orders_ordersmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="¥396.00"
                        android:textColor="@color/coloer_yellow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_ffb400_2dp"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_2"
                    android:paddingRight="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_2"
                    android:text="种子"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/orders_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:text="返神奇种子288颗"
                    android:textColor="@color/color_69" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号：" />

                    <TextView
                        android:id="@+id/orders_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="21365565165"
                        android:textColor="@color/color_69" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="创建时间：" />

                    <TextView
                        android:id="@+id/orders_creattime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2018年8月08日"
                        android:textColor="@color/color_69" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款时间：" />

                    <TextView
                        android:id="@+id/orders_paymenttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2018年8月08日"
                        android:textColor="@color/color_69" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发货时间：" />

                    <TextView
                        android:id="@+id/orders_deliverytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2018年8月08日"
                        android:textColor="@color/color_69" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/oder_shouhuo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/oder_wuliu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_text_item_my_order"
                        android:paddingLeft="12dp"
                        android:paddingTop="7dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="7dp"
                        android:text="查看物流"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/oder_centerAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_text_item_my_order"
                        android:paddingLeft="12dp"
                        android:paddingTop="7dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="7dp"
                        android:text="确认收货"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/oder_fukuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/oder_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_text_item_my_order"
                        android:paddingLeft="12dp"
                        android:paddingTop="7dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="7dp"
                        android:text="取消订单"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/oder_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_text_item_my_order"
                        android:paddingLeft="12dp"
                        android:paddingTop="7dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="7dp"
                        android:text="立即付款"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/oder_wancheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/oder_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_text_item_my_order"
                        android:paddingLeft="12dp"
                        android:paddingTop="7dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="7dp"
                        android:text="删除订单"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>