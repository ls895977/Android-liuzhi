<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="@dimen/dip_10"
            android:text="付款详情"
            android:textSize="@dimen/fond_16sp" />

        <ImageView
            android:id="@+id/shutdonw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/btn_close_reward" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:background="#f0f0f0" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dip_20"
        android:text="$48.00"
        android:textColor="@color/black"
        android:textSize="@dimen/fond_28sp" />

    <RelativeLayout
        android:id="@+id/zhifubao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dip_10"
            android:textSize="@dimen/fond_18sp"
            android:drawableLeft="@mipmap/icon_alipay"
            android:drawablePadding="@dimen/dip_10"
            android:text="支付宝" />

        <TextView
            android:id="@+id/tv_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10"
            android:background="@drawable/tv_check_box" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:textSize="@dimen/fond_18sp"
            android:textColor="@color/black"
            android:drawableLeft="@mipmap/weixin_payment"
            android:drawablePadding="@dimen/dip_10"
            android:text="微信" />
        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10"
            android:background="@drawable/tv_check_box" />
    </RelativeLayout>
    <TextView
        android:id="@+id/play_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_60"
        android:background="@drawable/bg_button_ffb400_2dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/fond_18sp"
        android:padding="@dimen/dip_10"
        android:text="确认付款" />
</LinearLayout>
