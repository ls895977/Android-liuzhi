<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/softtext_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="最美的回忆,都围绕着我们所拥有的回忆。"
        android:textColor="#414141"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纹理类型"
            android:textColor="#aaaaaa"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/tv_type"
            android:drawableLeft="@mipmap/read_times"
            android:drawablePadding="4dp"
            android:text="纹理类型"
            android:textColor="#aaaaaa"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-07-31"
            android:textColor="#aaaaaa"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <com.hykj.liuzhi.androidcomponents.ui.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/test1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_avatar"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dip_5">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="summer小姐姐"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/circle_Userfans"
                    android:layout_below="@+id/iv_person_detail_userhead"
                    android:layout_toRightOf="@+id/tv_person_detail_username"
                    android:layout_width="42dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_circle_detail_focus"
                    android:gravity="center"
                    android:text="+ 关注"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_autograp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无志之人常立志，有志之人立长志"
                android:textColor="#aaaaaa"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_Softtextimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="最美的回忆,都围绕着我们所拥有的回忆。最美的回忆,都围绕着我们所拥有的回忆。最美的回忆,都围绕着我们所拥有的回忆。最美的回忆,都围绕着我们所拥有的回忆。最美的回忆,都围绕着我们所拥有的回忆。最美的回忆,都围绕着我们所拥有的回忆。最美的回忆,都围绕着我们所拥有的回忆最美的回忆,都围绕着我们所拥有的回忆。"
        android:textColor="#414141"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="19dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/test1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/softtextimage_Userpoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/circlecollection_check_box"
            android:gravity="center"
            android:paddingTop="@dimen/dip_20"
            android:text="2_345"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/softtextimage_dashang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/reward"
            android:drawablePadding="@dimen/dip_2"
            android:gravity="center"
            android:paddingTop="@dimen/dip_20"
            android:text="打赏"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/softtextimage_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/collection_check_box"
            android:gravity="center"
            android:paddingTop="@dimen/dip_20"
            android:text="收藏"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/softtextimage_shear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share"
            android:drawablePadding="@dimen/dip_2"
            android:gravity="center"
            android:paddingTop="@dimen/dip_20"
            android:text="分享"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/soft_tougao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/contribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="我要投稿"
            android:textColor="#414141"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="发表文章成为专栏UP主"
            android:textColor="#aaaaaa"
            android:textSize="10sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论列表"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="更多>"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>