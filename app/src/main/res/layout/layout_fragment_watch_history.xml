<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dip_5"
        android:text="系统将自动记录您最近50条浏览记录"
        android:textSize="@dimen/fond_10sp" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:tl_indicator_color="#e6ffea00"
        app:tl_indicator_margin_top="0dp"
        app:tl_indicator_width="15dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@android:color/black"
        app:tl_textUnselectColor="@android:color/darker_gray"
        app:tl_textsize="14sp"></com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"></android.support.v4.view.ViewPager>
</LinearLayout>